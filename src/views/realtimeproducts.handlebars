<h2 class="container">PRODUCTOS EN TIEMPO REAL</h2> 
<div>Lista de productos</div>
<div id="contenedorProductos" class="container">  
    <h3>Formulario para agregar productos en tiempo real</h3>  
    <form class="row" id="formAgregarProducto">  
        <div class="mb-3 col-6">  
            <input type="text" id="title" class="form-control" placeholder="Título" required>  
        </div>  
        <div class="mb-3 col-6">  
            <input type="text" id="description" class="form-control" placeholder="Descripción" required>  
        </div>  
        <div class="mb-3 col-6">  
            <input type="number" id="price" class="form-control" placeholder="Precio" required>  
        </div>  
        <div class="mb-3 col-6">  
            <input type="text" id="img" class="form-control" placeholder="Imagen" value="Sin imagen por el momento">  
        </div>  
        <div class="mb-3 col-6">  
            <input type="text" id="code" class="form-control" placeholder="Código" required>  
        </div>  
        <div class="mb-3 col-6">  
            <input type="number" id="stock" class="form-control" placeholder="Stock disponible" required>  
        </div>  
        <div class="col-12">  
            <button type="button" id="btnEnviar" class="btn btn-primary">Agregar Producto</button>  
        </div>  
    </form>  

    <h3 class="mt-4">Productos Agregados</h3>  
    <div id="productosList" class="card container">  
        <div class="card-body">  
            <ul class="list-group" id="listaProductos"></ul>  
        </div>  
    </div>  
</div>  

